{
  "compilerOptions": {
      "module": "commonjs",
      "target": "es2018",
      "lib": ["es2018"],
      "rootDir": "lib/vendor",
      "outDir": "dist",
      "noImplicitAny": false,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "removeComments": true,
      "preserveConstEnums": true,
      "sourceMap": true,
      "skipLibCheck": true,
      "resolveJsonModule": true,
      "esModuleInterop": true,
      "experimentalDecorators": true
  }
}
